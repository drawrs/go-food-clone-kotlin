<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_anim"
    tools:context="com.khilman.www.go_send.FindDriverActivity">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/riding_bike_less"
        android:layout_centerHorizontal="true"
        android:id="@+id/bikeAnimation"
        android:layout_above="@+id/panelInfo"
        android:background="@drawable/bg_anim"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_above="@+id/btnNewOrder"
        android:id="@+id/panelInfo"
        android:gravity="center"
        android:background="#686f76"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#ebc82b"
            android:layout_marginTop="10dp"
            android:text="PLEASE WAIT.."/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bikeAnimation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:layout_marginVertical="10dp"
            android:text="SEARCHING THE NEAREST DRIVER FOR YOU."
            android:textColor="@android:color/white"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/btnCancelOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/circle_bg"
            android:padding="10dp"
            android:src="@drawable/ic_close_black_24dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/btnPrimary"
        android:paddingVertical="15dp"
        android:id="@+id/btnNewOrder"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="NEW ORDER"/>
    </LinearLayout>


</RelativeLayout>
